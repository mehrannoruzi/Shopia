@model PagingListDetails<Order>
@{
    Layout = null;
}
@if (Model.TotalCount > 0)
{
    <table class="footable table table-hover toggle-arrow-tiny">
        <thead>
            <tr>
                <th data-toggle="true">#</th>
                <th>@Html.DisplayNameFor(x => x.Items[0].Store)</th>
                <th data-hide="phone">@Html.DisplayNameFor(x => x.Items[0].User)</th>
                <th data-hide="phone">@Html.DisplayNameFor(x => x.Items[0].TotalPriceAfterDiscount)</th>
                <th data-hide="phone">@Html.DisplayNameFor(x => x.Items[0].InsertDateSh)</th>
                <th data-hide="all">@Html.DisplayNameFor(x => x.Items[0].OrderStatus)</th>
                <th data-hide="all">@Html.DisplayNameFor(x => x.Items[0].ToAddress)</th>
                <th class="text-center"> <i class="zmdi zmdi-wrench rotate-90"></i></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@(((Model.PageNumber - 1) * Model.PageSize) + Model.Items.IndexOf(item) + 1)</td>
                    <td>@item.Store.FullName</td>
                    <td>@item.User.FullName (@item.User.MobileNumber)</td>
                    <td>@item.TotalPriceAfterDiscount.ToString("N0")</td>
                    <td>@item.InsertDateSh</td>
                    <td>@item.OrderStatus.GetDescription()</td>
                    <td>@item.ToAddress.AddressDetails</td>
                    <td class="actions">
                        <div class="dropdown b-a-c">
                            <span class="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="zmdi zmdi-more rotate-90"></i>
                            </span>
                            <div class="dropdown-menu">
                                @if ((int)item.OrderStatus <= 4)
                                {
                                    <a class="dropdown-item update" data-url="@Url.Action("Update","StoreOrder",new { id = item.OrderId })">
                                        <i class="zmdi zmdi-edit default-i"></i>
                                        @Strings.Edit
                                    </a>
                                }
                                <a class="dropdown-item update" data-url="@Url.Action("Details","StoreOrder",new { id = item.OrderId })">
                                    <i class="zmdi zmdi-eye default-i"></i>
                                    @Strings.Details
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
            }


        </tbody>
        <tfoot class="d-none">
            <tr>
                <td colspan="5">
                    <ul class="pagination float-right"></ul>
                </td>
            </tr>
        </tfoot>
    </table>
    <partial name="Partials/_Pagination" model="@Model" />
}

else
{
    <div class="alert alert-warning text-center">
        <small>@string.Format(Strings.ThereIsNoRecord, Strings.Item)</small>
    </div>
}


