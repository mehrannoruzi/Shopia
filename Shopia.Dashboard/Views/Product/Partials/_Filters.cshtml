@model ProductSearchFilter
@{
    Layout = null;
}

<div class="row">
    <div class="col-12 col-sm-6">
        <custom-input-for for="Name" />
    </div>
    <div class="col-12 col-sm-6">
        <custom-select-for for="StoreId" class="form-control select2 with-ajax"
                           optional-label="@Strings.SelectPlease"
                           select-data-url="@Url.Action("Search","Store")" />
    </div>
</div>
<div class="row">
    <div class="col-12 col-sm-6">
        <custom-select-for for="UserId" class="form-control select2 with-ajax"
                           optional-label="@Strings.SelectPlease"
                           select-data-url="@Url.Action("Search","User")" />
    </div>
</div>
