@model IEnumerable<ActionInRole>
@{
    Layout = null;
}
<div class="row views">
    <div class="col-12 col-sm-12">
        <input id="filter" class="form-control form-control-sm m-b-xs" placeholder="@Strings.Search" />
    </div>
    <div class="col-12 col-sm-12">
        @if (Model != null)
        {
            var i = 0;
            <table class="footable table table-hover toggle-arrow-tiny" data-filter='#filter'>
                <thead>
                    <tr>
                        <th data-toggle="true">#</th>
                        <th>@Html.DisplayNameFor(x => x.Action.Name)</th>
                        <th data-hide="phone">@Html.DisplayNameFor(x => x.Action.Path)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(++i)</td>
                            <td>@item.Action.Name</td>
                            <td><span dir="ltr"> @item.Action.Path</span></td>
                        </tr>
                        i++;
                    }


                </tbody>
                <tfoot class="d-none">
                    <tr>
                        <td colspan="5">
                            <ul class="pagination float-right"></ul>
                        </td>
                    </tr>
                </tfoot>
            </table>
        }

        else
        {
            <div class="alert alert-warning text-center">
                <small>@string.Format(Strings.ThereIsNoRecord, Strings.Item)</small>
            </div>
        }
    </div>
</div>
